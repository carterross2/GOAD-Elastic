{
  "rules": [
    {
      "name": "Suspicious PowerShell Activity",
      "description": "Detects suspicious PowerShell command execution",
      "query": {
        "bool": {
          "must": [
            {"term": {"winlog.channel": "Microsoft-Windows-PowerShell/Operational"}},
            {"range": {"winlog.event_id": {"gte": "4103", "lte": "4106"}}},
            {"wildcard": {"message": "*-enc*"}}
          ]
        }
      },
      "severity": "medium"
    },
    {
      "name": "Kerberos Attack Detection", 
      "description": "Detects potential Kerberoasting attacks",
      "query": {
        "bool": {
          "must": [
            {"term": {"winlog.channel": "Security"}},
            {"term": {"winlog.event_id": "4769"}},
            {"term": {"winlog.event_data.TicketEncryptionType": "0x17"}}
          ]
        }
      },
      "severity": "high"
    },
    {
      "name": "DCSync Attack Detection",
      "description": "Detects potential DCSync attacks",
      "query": {
        "bool": {
          "must": [
            {"term": {"winlog.channel": "Security"}},
            {"term": {"winlog.event_id": "4662"}},
            {"wildcard": {"winlog.event_data.Properties": "*1131f6aa-9c07-11d1-f79f-00c04fc2dcd2*"}}
          ]
        }
      },
      "severity": "critical"
    },
    {
      "name": "Golden Ticket Detection",
      "description": "Detects potential Golden Ticket attacks",
      "query": {
        "bool": {
          "must": [
            {"term": {"winlog.channel": "Security"}},
            {"term": {"winlog.event_id": "4624"}},
            {"term": {"winlog.event_data.LogonType": "3"}},
            {"range": {"winlog.event_data.LogonProcessName": {"gte": "10"}}}
          ]
        }
      },
      "severity": "critical"
    }
  ]
}